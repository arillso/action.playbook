{
        "endOfLine": "lf",
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": true,
        "overrides": [
                {
                        "files": "*.{yml,yaml}",
                        "options": {
                                "tabWidth": 4,
                                "useTabs": true,
                                "singleQuote": false
                        }
                },
                {
                        "files": "**/*.json",
                        "options": {
                                "tabWidth": 8,
                                "useTabs": false
                        }
                },
                {
                        "files": "**/*.config",
                        "options": {
                                "tabWidth": 4,
                                "useTabs": false
                        }
                },
                {
                        "files": "**/*.conf",
                        "options": {
                                "tabWidth": 2,
                                "useTabs": false
                        }
                },
                {
                        "files": "Makefile",
                        "options": {
                                "useTabs": true
                        }
                },
                {
                        "files": "Vagrantfile",
                        "options": {
                                "tabWidth": 2,
                                "useTabs": false
                        }
                },
                {
                        "files": "*.{tf,tfvars}",
                        "options": {
                                "tabWidth": 4,
                                "useTabs": false
                        }
                },
                {
                        "files": "*.hcl",
                        "options": {
                                "tabWidth": 2,
                                "useTabs": false
                        }
                },
                {
                        "files": "*.xml",
                        "options": {
                                "tabWidth": 4,
                                "useTabs": false
                        }
                },
                {
                        "files": ".pylintrc",
                        "options": {
                                "tabWidth": 4,
                                "useTabs": false
                        }
                },
                {
                        "files": ["*.rst", "*/index.rst"],
                        "options": {
                                "tabWidth": 3,
                                "useTabs": false
                        }
                },
                {
                        "files": "*.sh",
                        "options": {
                                "tabWidth": 2,
                                "useTabs": false
                        }
                },
                {
                        "files": "manager",
                        "options": {
                                "tabWidth": 4,
                                "useTabs": false
                        }
                },
                {
                        "files": "Dockerfile",
                        "options": {
                                "tabWidth": 8,
                                "useTabs": true
                        }
                },
                {
                        "files": "*.{go,work,mod}",
                        "options": {
                                "tabWidth": 4,
                                "useTabs": true
                        }
                },
                {
                        "files": "playbook.conf",
                        "options": {
                                "tabWidth": 4,
                                "useTabs": true
                        }
                },
                {
                        "files": "*.md",
                        "options": {
                                "tabWidth": 2,
                                "useTabs": false,
                                "proseWrap": "always"
                        }
                }
        ]
}
